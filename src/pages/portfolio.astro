---
import Layout from "../layouts/Layout.astro"
import { Image } from "astro:assets";
import heroImage from "../assets/barbersTools.webp";
import one from "../assets/Fake-Aaron.webp";
import two from "../assets/Fake-Antonne.webp";
import three from "../assets/Fake-Cory.webp";
import four from "../assets/Fake-Jessie.webp";
import five from "../assets/Fake-Justin.webp";


   const Images = [
        one,
        two,
        three,
        four,
        five
    ]
---

<Layout title="OUTBACK EDGE STUDIO - PORTFOLIO">

    <main>
        <section class='w-full '>
            <Image src={heroImage} widths={[300,  1060,  1460,  1780,  2048, heroImage.width]} sizes="100vw" loading="eager"
            alt="OUTBACK EDGE STUDIO" class='w-full object-cover md:h-[50vh] lg:h-[70vh] 2xl-[120vh]  bg-blend-darken   grayscale ' />
            <div class="absolute top-1/3 left-1/2 -translate-x-1/2  -translate-y-1/2 flex justify-center ">
                <h1 class="text-white mt-48 mb-28 text-7xl font-['Infer'] ">PORTFOLIO</h1>
            </div>
		</section>

        <div class="grid grid-cols-1 xl:grid-cols-3 xl:mx-48 gap-4 my-24 px-2 ">
            {Images.map(image => 
                <div class="bg-cover ring-1 ring-slate-500 rounded-md object-fit">
                    <Image  src={image} alt={`${image.src}`} class=" w-full h-full max-h-[600px]" />   
                </div>
            )}
            {Images.map(image => 
                <div class="bg-cover ring-1 ring-slate-500 rounded-md">
                    <Image  src={image} alt="" class="aspect-[9/16] max-h-[600px]" />   
                </div>
            )}
            {Images.map(image => 
                <div class="bg-cover ring-1 ring-slate-500 rounded-md">
                    <Image  src={image} alt="" class="aspect-[9/16] max-h-[600px]" />   
                </div>
            )}
        </div>
    </main>
</Layout>