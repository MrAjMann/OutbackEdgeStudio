---

import { Image } from 'astro:assets';
interface Props {
	title: string;
	body: string;
	altText: string;
	imageSrc: any;
	
}



const {  title, body, imageSrc, altText} = Astro.props;
---


<li class="list-none xl:my-8 flex flex-col justify-center items-center xl:flex-row gap-4 xl:gap-16">
    <div>
        <Image src={imageSrc} widths={[350, 700, imageSrc]} sizes="350px, 700px" alt={altText} class="max-w-[350px] mix-blend-darken" >
    </div>
    <div class="flex flex-col justify-center items-center max-w-md px-12 xl:px-0">
        
        <h2 class="m-0 font-semibold text-4xl transition-colors duration-600">
            {title}
        </h2>
        <div class="w-full xl:w-[80%] bg-black h-[2px] my-4"></div>
       
        <p class="mt-2 mb-0 text-gray-700 my-4 font-normal">
            {body}
        </p>
    </div>
</li>

